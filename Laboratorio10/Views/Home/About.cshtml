@{
    ViewBag.Title = "Grid system";
}
<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/Content/GridSystem.css" />
</head>
<div class="container">
    <div class="row">
        <div class="col">
            <p>1 of 2</p>
        </div>
        <div class="col">
            <p>2 of 2</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>1 of 3</p>
        </div>
        <div class="col">
            <p>2 of 3</p>
        </div>
        <div class="col">
            <p>3 of 3</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>1 of 6</p>
        </div>
        <div class="col">
            <p>2 of 6</p>
        </div>
        <div class="col">
            <p>3 of 6</p>
        </div>
        <div class="col">
            <p>4 of 6</p>
        </div>
        <div class="col">
            <p>5 of 6</p>
        </div>
        <div class="col">
            <p>6 of 6</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-3">
            <p>3 cols</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <p>6 cols</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-9">
            <p>9 cols</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <p>12 cols</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-4">
            <p>(0,0)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-4 offset-4">
            <p>(1,1)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-4 offset-8">
            <p>(2,2)</p>
        </div>
    </div>
</div>
